<Window x:Class="IMOOC.EduCourses.Utils.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMOOC.EduCourses.Utils"
        mc:Ignorable="d" Height="60" Width="60"
        Topmost="True"  WindowStyle="None" AllowsTransparency="True"
        Background="White" Loaded="ProgressWindow_Loaded" > 
    <Button Name="StatusInfo" PreviewMouseDown="StatusInfo_PreviewMouseDown" Content="等待" VerticalContentAlignment="Center" Width="60" Height="60" HorizontalAlignment="Center" BorderThickness="0">
        <Button.Background>
            <RadialGradientBrush  
                                 GradientOrigin="0.5,0.5" Center="0.5,0.5" 
                                 RadiusX="0.8" RadiusY="0.8">
                <GradientStop Color="White" Offset="0" />
                <GradientStop Color="#0391db" Offset="1"/>
            </RadialGradientBrush>
        </Button.Background>
    </Button>
</Window>
