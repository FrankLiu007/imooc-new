                        <Setter Property="Margin" Value="30,0,0,0"/>
                        <Setter Property="Background" Value="#F8F8F8"/>
                    </Style>
                </StackPanel.Resources>
                <CheckBox Template="{DynamicResource CheckBoxTemplate}" Margin="30,0,0,0"  ToolTip="录制板书" Content="{DynamicResource Gx}" IsChecked="True" IsEnabled="False"/>
                <CheckBox Template="{DynamicResource CheckBoxTemplate}" Margin="30,0,0,0" ToolTip="录制PPT"  Content="{DynamicResource Gx}" IsChecked="True" IsEnabled="False"/>
                <CheckBox Template="{DynamicResource CheckBoxTemplate}" Margin="30,0,0,0" Name="CheckBoxaudio"  ToolTip="录制声音" Content="{DynamicResource Gx}" IsChecked="True" IsEnabled="False"/>
                <CheckBox Template="{DynamicResource CheckBoxTemplate}" Margin="30,0,0,0" Name="CheckBoxVideo" ToolTip="录制视频" Content="{DynamicResource Gx}" Click="CheckBoxVideo_Click"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0">
            <Border Margin="30,15,15,15" BorderThickness="1" BorderBrush="#dedede">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="24*"/>
                        <RowDefinition Height="48*"/>
                        <RowDefinition Height="48*"/>
                        <RowDefinition Height="48*"/>
                        <RowDefinition Height="10*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="1">
                        <Label HorizontalAlignment="Left" Content="录音器"/>
                        <ComboBox Name="comboBoxSound"  HorizontalAlignment="Right"  Width="200"/>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Label HorizontalAlignment="Left" Content="音频通道"/>
                        <ComboBox Name="comboBoxChannels" HorizontalAlignment="Right" Width="200" />
                    </Grid>
                    <Grid Grid.Row="3">
                        <Label HorizontalAlignment="Left" Content="采样频率"/>
                        <ComboBox Name="comboBoxSampleRate" HorizontalAlignment="Right" Width="200"/>
                    </Grid>

                </Grid>
            </Border>
            <Button Template="{DynamicResource ImgTxtBtnTemplate1}" Content="{DynamicResource Sy}" Height="40" ToolTip="声音设置"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="45,0,0,0"/>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Margin="0,10,0,0">
            <Border Margin="30,15,15,15" BorderThickness="1" BorderBrush="#eeeeee">
                <Grid Name="VideoSettingsGrid" IsEnabled="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="24*"/>
                        <RowDefinition Height="48*"/>
                        <RowDefinition Height="48*"/>
                        <RowDefinition Height="48*"/>
                        <RowDefinition Height="10*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="1">
                        <Label HorizontalAlignment="Left" Content="摄像头"/>
                        <ComboBox Name="comboBoxCamera" HorizontalAlignment="Right" Width="200" SelectionChanged="comboBoxCamera_SelectionChanged"/>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Label HorizontalAlignment="Left" Content="分辨率"/>
                        <ComboBox Name="comboBoxResolution" HorizontalAlignment="Right" Width="200" />
                    </Grid>
                    <Grid Grid.Row="3">
                        <Label HorizontalAlignment="Left" Content="帧速率"/>
                        <ComboBox Name="comboBoxFrameRate" HorizontalAlignment="Right" Width="200"/>
                    </Grid>
                </Grid>
            </Border>
            <Button Template="{DynamicResource ImgTxtBtnTemplate1}" Content="{DynamicResource Sp}" Height="40" ToolTip="视频设置"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="45,0,0,0"/>
        </Grid>

        <Grid Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2">
            <Button Width="100"   Content="开始" Name="buttonStart" HorizontalAlignment="Right" Margin="0,0,30,0" Click="buttonStart_Click" Background="#0391db" BorderThickness="0" BorderBrush="#0391db" Foreground="White" IsDefault="True"/>
        </Grid>
        <Grid Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2">
            <Button Width="100" Background="White" Content="退出" BorderBrush="#d1d1d1" Name="buttonStop" HorizontalAlignment="Left" Margin="30,0,0,0" Click="buttonStop_Click"/>
        </Grid>-->

    </Grid>
</Window>

