        </Grid>
        <Grid Grid.Column="0" Grid.Row="1" Grid.RowSpan="6">
            
        </Grid>
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" >
            <Button Margin="30,10,0,0" Template="{DynamicResource ImgTxtBtnTemplate1}" Content="{DynamicResource Lzxx}" ToolTip="录制选项"  HorizontalAlignment="Left"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="3" Grid.RowSpan="2">
            <Label Width="auto" Margin="30,0" Name="VideoWnd"/>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" >
            <StackPanel Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="Label">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
